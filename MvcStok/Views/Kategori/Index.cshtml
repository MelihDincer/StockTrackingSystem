@using MvcStok.Models.Entity
@model PagedList.IPagedList<TBLKATEGORILER>  
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.KATEGORIID</td>
                <td>@ktgr.KATEGORIAD</td>
                <td> <a href="/KATEGORI/SIL/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a> </td>
                <td> <a href="/KATEGORI/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GUNCELLE</a> </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))   @*Url.Action = Yönlendir , Index'e' yönlendir ve yeni sayfa oluştur.*@
<a href="/KATEGORI/YeniKategori" class="btn btn-primary">YENİ KATEGORİ EKLE</a>



